<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginVertical="5dp"
        android:background="@color/buttonColorText">
        <TableRow>
            <TextView
                android:text="Medicine"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="22dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="Stock"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="22dp"
                android:gravity="center"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:text="Medicine 1"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="80"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Medicine 2"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="40"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Medicine 3"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="65"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Medicine 4"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="35"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Medicine 5"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:text="20"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:id="@+id/request"
        android:text="Request to Order"
        android:background="@drawable/button_design"
        android:textColor="@color/buttonColorText" />
</LinearLayout>